ELK_VERSION=7.15.0

# PostgreSQL database configuration
POSTGRES_USER=my_app_user
POSTGRES_PASSWORD=my_secret_password

# Flask configuration
APP_NAME=MyApp
SECRET_KEY=my_secret_key
SQLALCHEMY_DATABASE_URI=postgresql+psycopg2://my_app_user:my_secret_password@postgres:5432/my_app_db
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=my_email@example.com
MAIL_PASSWORD=my_email_password

# Email subjects and URIs
SUBJECT=Welcome to MyApp!
SUBJECT_RESET=Reset Your Password
CONFIRMATION_URI=http://localhost:5000/confirm
RESET_URI=http://localhost:5000/reset-password
